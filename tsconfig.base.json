{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "paths": {
      "@minimall/core": ["./packages/core/src"],
      "@minimall/core/*": ["./packages/core/src/*"],
      "@minimall/db": ["./packages/db/src"],
      "@minimall/db/*": ["./packages/db/src/*"],
      "@minimall/ui": ["./packages/ui/src"],
      "@minimall/ui/*": ["./packages/ui/src/*"],
      "@minimall/config": ["./packages/config/src"],
      "@minimall/config/*": ["./packages/config/src/*"],
      "@minimall/types": ["./packages/types/src"],
      "@minimall/types/*": ["./packages/types/src/*"],
      "@minimall/webhooks": ["./packages/webhooks/src"],
      "@minimall/webhooks/*": ["./packages/webhooks/src/*"],
      "@minimall/api": ["./packages/api/src"],
      "@minimall/api/*": ["./packages/api/src/*"],
      "@minimall/test-utils": ["./packages/test-utils/src"],
      "@minimall/test-utils/*": ["./packages/test-utils/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "out", "build"]
}