{
  "name": "link-in-bio-platform",
  "version": "0.1.0",
  "description": "Ultra-fast link-in-bio platform for Shopify merchants",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=admin",
    "dev:public": "turbo dev --filter=public",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:component": "npx tsx scripts/generate-component.ts",
    "generate:api": "npx tsx scripts/generate-api.ts",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "npm install && npm run db:push",
    "reset": "npm run clean && npm install",
    "analyze": "turbo analyze"
  },
  "workspaces": ["apps/*", "packages/*"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "@vitejs/plugin-react": "^5.0.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.27.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "storybook": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14"
  },
  "packageManager": "npm@11.5.2",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "zustand": "^5.0.7",
    "tsx": "^4.7.0",
    "prettier": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.468.0"
  },
  "overrides": {
    "react-is": "^18.3.1",
    "prismjs": "^1.30.0",
    "esbuild": "^0.25.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-kit": {
      "@esbuild-kit/core-utils": {
        "esbuild": "^0.25.0"
      }
    }
  }
}
