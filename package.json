{
  "name": "link-in-bio-platform",
  "version": "0.1.0",
  "description": "Ultra-fast link-in-bio platform for Shopify merchants",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter=admin",
    "dev:public": "turbo dev --filter=public",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "generate:component": "npx tsx scripts/generate-component.ts",
    "generate:api": "npx tsx scripts/generate-api.ts",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "npm install && npm run db:push",
    "reset": "npm run clean && npm install",
    "analyze": "turbo analyze",
    "ci": "npm run type-check && npm run lint && npm run build && npm run test",
    "test:e2e": "playwright test --config=tests/playwright.config.ts tests/e2e",
    "test:integration": "playwright test --config=tests/playwright.config.ts tests/integration",
    "test:components": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:focused": "npm run test:integration && npm run test:e2e && npm run test:components",
    "validate": "node scripts/validate-deployment.js",
    "validate:admin": "node scripts/validate-deployment.js --app=admin",
    "validate:public": "node scripts/validate-deployment.js --app=public",
    "deploy:simulate": "scripts/local-deployment.sh all",
    "deploy:simulate:admin": "scripts/local-deployment.sh admin",
    "deploy:simulate:public": "scripts/local-deployment.sh public",
    "validate:all": "./scripts/validate-all.sh",
    "check": "./scripts/validate-all.sh",
    "setup:env": "./scripts/setup-env.sh",
    "analyze:bundle": "turbo analyze"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "@vitejs/plugin-react": "^5.0.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.27.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@11.5.2",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.468.0",
    "postcss": "^8.5.3",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "zustand": "^5.0.7"
  },
  "overrides": {
    "react-is": "^18.3.1",
    "prismjs": "^1.30.0",
    "esbuild": "^0.25.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-kit": {
      "@esbuild-kit/core-utils": {
        "esbuild": "^0.25.0"
      }
    }
  }
}
