# =================================================================
# MINIMALL ENVIRONMENT CONFIGURATION TEMPLATE - DUAL DEPLOYMENT
# =================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit actual secrets to version control!
#
# IMPORTANT: MINIMALL uses a dual deployment strategy:
# - yourdomain.com: Public app (Instagram-native link-in-bio)
# - admin.yourdomain.com: Admin app (Shopify embedded interface)
#
# You'll need to configure these variables in TWO separate Vercel projects

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# Get this from Neon, PlanetScale, or your PostgreSQL provider
# Format: postgresql://user:password@host:port/database?options
DATABASE_URL="postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/minimall?sslmode=require"

# =================================================================
# CLOUDFLARE R2 STORAGE
# =================================================================
# Create bucket and API tokens at: https://dash.cloudflare.com/
R2_ENDPOINT="https://xxx.r2.cloudflarestorage.com"
R2_ACCESS_KEY="your-r2-access-key-here"
R2_SECRET="your-r2-secret-key-here"
R2_BUCKET_NAME="minimall-assets"
# Optional: Custom domain for R2 assets
R2_DOMAIN="assets.yourdomain.com"

# =================================================================
# SHOPIFY APP CONFIGURATION  
# =================================================================
# Get these from Shopify Partners: https://partners.shopify.com/
SHOPIFY_API_KEY="your-shopify-client-id"
SHOPIFY_API_SECRET="your-shopify-client-secret"
SHOPIFY_SCOPES="read_products,write_products,read_orders,read_customers,read_themes,write_themes"

# OAuth and webhook endpoints (points to admin domain)
SHOPIFY_APP_URL="https://admin.yourdomain.com"
SHOPIFY_WEBHOOK_SECRET="your-webhook-signature-secret"

# Session management
JWT_SECRET="your-jwt-secret-for-session-tokens"

# =================================================================
# SENTRY ERROR MONITORING
# =================================================================
# Get DSN from Sentry.io project settings
NEXT_PUBLIC_SENTRY_DSN="https://abc123@o123456.ingest.sentry.io/123456"
SENTRY_DSN="https://abc123@o123456.ingest.sentry.io/123456"

# =================================================================
# ENVIRONMENT & DEPLOYMENT (DUAL DOMAIN SETUP)
# =================================================================
NODE_ENV="production" # or "development" for local

# PUBLIC APP DOMAIN (link-in-bio experience)
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"
PUBLIC_APP_URL="https://yourdomain.com"

# ADMIN APP DOMAIN (Shopify embedded admin)
NEXT_PUBLIC_APP_URL="https://admin.yourdomain.com"
NEXT_PUBLIC_ADMIN_URL="https://admin.yourdomain.com"
ADMIN_APP_URL="https://admin.yourdomain.com"
NEXTAUTH_URL="https://admin.yourdomain.com"

# =================================================================
# OPTIONAL: ADDITIONAL SERVICES
# =================================================================
# Analytics and monitoring
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Custom domains
ADMIN_DOMAIN="admin.yourdomain.com"
PUBLIC_DOMAIN="links.yourdomain.com"

# =================================================================
# DEVELOPMENT ONLY
# =================================================================
# These are only needed for local development
NGROK_URL="https://abc123.ngrok.io" # For local Shopify app development