{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useSemanticElements": "off",
				"noLabelWithoutControl": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist/**"]
	}
}
