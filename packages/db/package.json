  },
  "files": [
    "dist/**"
  ],
  "dependencies": {
    "@minimall/core": "*",
    "drizzle-orm": "^0.29.0",
    "@planetscale/database": "^1.11.0",
    "@neondatabase/serverless": "^0.6.0",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "@types/pg": "^8.10.0"
  }
