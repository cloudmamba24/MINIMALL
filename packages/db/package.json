{
  "name": "@minimall/db",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/migrate.ts"
  },
  "files": [
    "dist/**"
  ],
  "dependencies": {
    "@minimall/core": "*",
    "@neondatabase/serverless": "^1.0.1",
    "@planetscale/database": "^1.19.0",
    "drizzle-orm": "^0.44.4",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/pg": "^8.11.10",
    "critters": "^0.0.23",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
