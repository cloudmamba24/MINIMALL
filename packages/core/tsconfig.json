{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"incremental": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/test-setup.ts",
		"src/test-utils.ts",
		"src/test-setup/**/*"
	]
}
