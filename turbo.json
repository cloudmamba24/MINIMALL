{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "R2_ENDPOINT",
        "R2_ACCESS_KEY",
        "R2_SECRET",
        "R2_BUCKET_NAME",
        "NEXT_PUBLIC_BASE_URL",
        "NODE_ENV",
        "NEXT_PUBLIC_APP_ENV",
        "SHOPIFY_API_KEY",
        "SHOPIFY_API_SECRET",
        "SHOPIFY_SCOPES",
        "NEXT_PUBLIC_SHOPIFY_API_KEY",
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_APP_URL",
        "JWT_SECRET",
        "SHOPIFY_WEBHOOK_SECRET",
        "SHOPIFY_STOREFRONT_ACCESS_TOKEN",
        "NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN",
        "SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_DSN",
        "STOREFRONT_API_TOKEN",
        "NEXT_PUBLIC_APP_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
