# Database
DATABASE_URL=postgresql://username:password@localhost:5432/minimall

# Cloudflare R2 Storage
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET=your_r2_secret_key
R2_BUCKET_NAME=minimall-configs
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_DOMAIN=https://your-custom-domain.com

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_secret_key
SHOPIFY_SECRET_KEY=your_shopify_secret_key
SHOPIFY_SCOPES=read_products,write_products,read_orders,read_customers
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_token

# Authentication
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://your-admin-domain.com

# Next.js Public Variables
NEXT_PUBLIC_SHOPIFY_API_KEY=your_shopify_api_key
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_public_storefront_token
NEXT_PUBLIC_APP_URL=https://your-admin-domain.com
NEXT_PUBLIC_BASE_URL=https://your-public-domain.com
NEXT_PUBLIC_APP_ENV=production

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Development
NODE_ENV=development