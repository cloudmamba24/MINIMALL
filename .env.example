# MINIMALL Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ========================================
# Core Application Settings
# ========================================
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# ========================================
# Database Configuration (Required)
# ========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=
DATABASE_POOL_SIZE=10

# ========================================
# Shopify Configuration (Required for Production)
# ========================================
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SCOPES=read_products,write_products,read_orders,read_customers
SHOPIFY_WEBHOOK_SECRET=
SHOPIFY_DOMAIN=yourstore.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=

# ========================================
# Cloudflare R2 Storage (Required for Media)
# ========================================
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY=
R2_SECRET=
R2_BUCKET_NAME=minimall-assets
R2_PUBLIC_URL=https://assets.yourdomain.com

# ========================================
# Authentication & Security (Required)
# ========================================
NEXTAUTH_URL=http://localhost:3001
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# ========================================
# Monitoring & Error Tracking
# ========================================
# Get your DSN from https://sentry.io
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=your-org
SENTRY_PROJECT=minimall

# ========================================
# Internal Services
# ========================================
# Generate with: openssl rand -hex 32
INTERNAL_API_TOKEN=
CRON_SECRET=

# ========================================
# Feature Flags
# ========================================
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_SOCIAL_IMPORT=false
FEATURE_PERFORMANCE_MONITORING=false

# ========================================
# External APIs (Optional)
# ========================================
# Instagram Basic Display API
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# ========================================
# Development & Testing
# ========================================
# Logging
LOG_LEVEL=info
DB_DEBUG=false

# Test Database (for running tests)
TEST_DATABASE_URL=