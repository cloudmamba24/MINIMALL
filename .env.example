# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ========================================
# Core Application Settings
# ========================================
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/minimall_dev
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# ========================================
# Cloudflare R2 Storage
# ========================================
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET=your-r2-secret-key
R2_BUCKET_NAME=minimall-assets
R2_PUBLIC_URL=https://assets.yourdomain.com

# ========================================
# Shopify Configuration
# ========================================
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_APP_URL=https://your-app.ngrok.io
SHOPIFY_SCOPES=read_products,write_products,read_orders

# ========================================
# Authentication & Security
# ========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key
JWT_SECRET=your-jwt-secret

# ========================================
# External APIs
# ========================================
# Instagram Basic Display API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA4-MEASUREMENT-ID
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# Vercel/Deployment Specific
# ========================================
VERCEL_URL=$VERCEL_URL
VERCEL_ENV=$VERCEL_ENV

# ========================================
# Development & Testing
# ========================================
# Logging
LOG_LEVEL=info

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_IMPORT=true
FEATURE_PERFORMANCE_MONITORING=true

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/minimall_test