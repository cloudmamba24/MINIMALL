{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["../../biome.json"],
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn",
        "noGlobalIsNan": "off",
        "noArrayIndexKey": "warn",
        "noCommentText": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn",
        "useButtonType": "warn",
        "useSemanticElements": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "useTemplate": "warn",
        "useNodejsImportProtocol": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      }
    }
  },
  "overrides": [
    {
      "include": [
        "**/components/modals/**",
        "**/components/renderers/**",
        "**/components/shop/**",
        "**/components/renderer.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "include": ["**/components/optimization/**", "**/components/instagram/**"],
      "linter": {
        "rules": {
          "correctness": {
            "useExhaustiveDependencies": "off"
          },
          "complexity": {
            "noForEach": "off"
          }
        }
      }
    }
  ]
}
